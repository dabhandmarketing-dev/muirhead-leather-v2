{% when 'button-icon' %}
            <div li-block="Button Icon">
                    
                          
                    <div data-animation="stagger">
                            <a href="{{ block.settings.url_button_link }}" class="w-inline-block"> {% if block.settings.image_icon %} {{ block.settings.image_icon | image_url: width: 1000 | image_tag: loading: 'lazy' }} {% else %} <img loading="lazy" alt="" src="https://d3e54v103j8qbb.cloudfront.net/plugins/Basic/assets/placeholder.60f9b1840c.svg"> {% endif %}<span>{{ block.settings.text_button_text }}</span> </a>
                          </div>
                    
                        
                </div> {% schema %} {
    "name": "Button Icon",
    "settings": [
        {
            "id": "url_button_link",
            "type": "url",
            "label": "Button Link"
        },
        {
            "id": "image_icon",
            "type": "image_picker",
            "label": "Icon"
        },
        {
            "id": "text_button_text",
            "type": "text",
            "label": "Button Text",
            "default": "Button Text"
        }
    ],
    "presets": [
        {
            "name": "Button Icon"
        }
    ]
} {% endschema %}