  position: relative; /* Make sure the child div is positioned relative to the parent */
}
/* Wrapper for each bullet */
.hero-pagination .bullet-wrapper {
  min-width: 60px !important;
  height: 8px !important;
  background-color: #ccc; /* Light gray background for parent */
  overflow: hidden;
  position: relative; /* Ensure the child .bullet-progress can fit inside */
}
/* The child div that will animate (progress bar) */
.hero-pagination .bullet-progress {
  width: 0%; /* Start with no progress (width 0) */
  height: 100%;
  background-color: #fff; /* White color for progress */
  transition: width 5s ease; /* Smooth transition over 5 seconds */
  position: absolute; /* Position inside the parent wrapper */
  top: 0;
  left: 0;
}
/* The active bullet (this will have the progress bar animation) */
.hero-pagination .swiper-pagination-bullet-active .bullet-progress {
  width: 100%; /* Expand to 100% width when active */
}
/* Reset progress width for non-active bullets */
.hero-pagination .swiper-pagination-bullet:not(.swiper-pagination-bullet-active) .bullet-progress {
  width: 0%; /* Reset progress bar width to 0 for non-active bullets */
}
/* To ensure non-active bullets immediately reset their progress */
.hero-pagination .swiper-pagination-bullet:not(.swiper-pagination-bullet-active) .bullet-progress {
  transition: width 0s ease; /* Disable transition when bullet is not active */
}
/* When a bullet is active again, apply the transition smoothly */
.hero-pagination .swiper-pagination-bullet-active .bullet-progress {
  transition: width 5s ease; /* Re-enable transition for the active bullet */
}
