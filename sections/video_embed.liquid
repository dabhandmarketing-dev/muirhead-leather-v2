<div class="padding-section-small">
          <div class="padding-global">
            <div class="container-large">
              <div class="video_wrapper" style="aspect-ratio: {{ section.settings.video.aspect_ratio }}">
                <div class="w-embed w-iframe">{% if section.settings.video.url %}
                  {% if section.settings.video.url contains 'youtube.com' or section.settings.video.url contains 'youtu.be' %}
                  <iframe width="100%" height="100%" src="{{ section.settings.video.url | replace: 'watch?v=', 'embed/' | replace: 'youtu.be/', 'youtube.com/embed/' }}" frameborder="0" allowfullscreen=""></iframe>
                  {% elsif section.settings.video.url contains 'vimeo.com' %}
                  <iframe width="100%" height="100%" src="{{ section.settings.video.url | replace: 'vimeo.com/', 'player.vimeo.com/video/' }}" frameborder="0" allowfullscreen=""></iframe>
                  {% endif %}
                  {% else %}
                  <p>No video URL provided.</p>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div> {% schema %} {
    "tag": "section",
    "name": "Video Embed",
    "class": "section_video",
    "settings": [
        {
            "type": "video_url",
            "id": "video",
            "label": "Video",
            "accept": [
                "youtube",
                "vimeo"
            ]
        }
    ],
    "presets": [
        {
            "name": "Video Embed",
            "category": "Liquify",
            "blocks": []
        }
    ]
} {% endschema %}